<script>
    window.fbAsyncInit = function() {
        FB.init({
            appId            : '{{ facebook_app_id }}',
            autoLogAppEvents : true,
            xfbml            : true,
            version          : '{{ facebook_api_version }}'
        });

        $("#facebook_login_btn").on("click", function () {
            FB.login(function (response) {
                if (response.authResponse) {
                    $.blockUI({message: 'We are logging you right now!! :)'});
                    var authToken = response.authResponse.accessToken;
                    $.ajax({
                        url: '{{ path('facebook_login_check') }}',
                        data: JSON.stringify({'token': authToken}),
                        contentType: 'application/json',
                        type: 'POST',
                        success: function (data) {
                            window.location.href = '{{ app.request.headers.get('referer')|default('/') }}';
                        },
                        error: function (e) {
                            alert('There was an error in trying to authenticate, please email ' + '{{ email }} .');
                        }
                    });
                } else {

                }
            });
        });

    };

    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

</script>